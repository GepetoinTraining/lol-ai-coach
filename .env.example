# Riot Games API
# Get your key at: https://developer.riotgames.com/
# Dev keys expire every 24 hours
RIOT_API_KEY=RGAPI-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Default region for API routing
# Options: americas, europe, asia, sea
RIOT_DEFAULT_REGION=americas

# Anthropic Claude API
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-xxxxx

# Database
# SQLite for development
DATABASE_URL=sqlite:///./data/lol_coach.db
# PostgreSQL for production
# DATABASE_URL=postgresql://user:password@localhost:5432/lol_coach

# Redis (optional - improves rate limit handling)
# REDIS_URL=redis://localhost:6379

# Discord Bot
# Create a bot at: https://discord.com/developers/applications
DISCORD_BOT_TOKEN=your-bot-token-here
DISCORD_GUILD_ID=your-server-id

# Whisper Model
# Options: tiny, base, small, medium, large
# tiny/base are fast but less accurate, large is slow but accurate
WHISPER_MODEL=base

# Player Memory Storage
# Directory where player profiles (.md files) are stored
COACH_MEMORY_DIR=./data/players

# Application
APP_ENV=development
LOG_LEVEL=INFO
